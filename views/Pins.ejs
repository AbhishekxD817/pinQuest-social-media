<%- include('./includes/html-head.ejs',{title:'Home'}) %>

    <%- include('./includes/header.ejs') %>
        <%- include('./includes/flashMessage.ejs') %>

        
            <section class="my-4">
                
                
                <div class="container search-input-div">

                    <div class="row height d-flex justify-content-center align-items-center">

                      <div class="col-md-8">
                        <form action="/search" method="get">
                        <div class="search">
                          <i class="fa fa-search"></i>
                          <input type="text" class="form-control" placeholder="Search Username..." name="username">
                          <button class="btn btn-primary">Search</button>
                        </div>
                        </form>
                        
                      </div>
                      
                    </div>
                </div>
                <center><h1>Explore Pins</h1></center>



                <div class="cards-container container">
                    <div class="d-flex flex-wrap column-gap-4 justify-content-center cards-container-2">
                        <% for ( let i = 0; i < pins.length ; i++){ %>
                            <div class="overlay">
                                <a href="/pins/<%= pins[i]._id %>">
                                <div class="profile-card-2">
                                    <img src="<%= pins[i].image.url %>"
                                        class="img img-responsive">
                                    <div class="profile-name"><%= pins[i].title %></div>
                                    <div class="profile-username">@<%= pins[i].owner.username %></div>
                                </div>
                                </a>
                            </div>
                            <% } %>
                    </div>
                </div>
            </section>




            <%- include('./includes/html-foot.ejs') %>